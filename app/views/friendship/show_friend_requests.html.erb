<h1 class="card-title"> Your Friend Requests </h1>
<% if @friend_requests.empty? %>
	<h5 class="card-centered-content">You don't have any friend requests at the moment!</h5>
<% else %>
	<% @friend_requests.each do |friend_request| %>
		<ul>
			<li>
				Request From:
				<%= friend_request.full_name %>
				<%= button_to "Accept Friend", accept_friend_request_url(:user_id => friend_request.id), class: "btn btn-sm btn-primary" %>
			</li>
		</ul>
	<% end %> <!-- End of friend_request each loop -->
<% end %> <!-- End of having friend requests -->
